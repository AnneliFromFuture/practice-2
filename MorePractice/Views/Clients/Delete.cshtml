@model MorePractice.Models.Client

@{
    ViewBag.Title = "Удаление клиента";
}

<h2>Удаление клиента</h2>

<h3>Вы уверены, что хотите удалить данного пользователя и все связанные с ним данные?</h3>

@if (ViewBag.Message != null)
{
    <div class="red" style="color:red; font-size:large">
        <p><strong>Ошибка!</strong> @ViewBag.Message.ToString()</p>
    </div>
}

<div>
    <h4>Клиент</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Имя")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayName("Фамилия")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Surname)
        </dd>

        <dt>
            @Html.DisplayName("Отчество")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Fathername)
        </dd>

        <dt>
            @Html.DisplayName("Дата рождения")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BirthDate)
        </dd>

        <dt>
            @Html.DisplayName("Номер телефона")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

        <dt>
            @Html.DisplayName("E-mail")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        @if (ViewBag.Message != null)
        {
            <input type="submit" value="Удалить" class="btn btn-default" disabled />    }
        else
        {   <input type="submit" value="Удалить" class="btn btn-default" />  }       
        |
        @Html.ActionLink("Назад к списку", "List")

    </div>
    }
</div>


