@model MorePractice.Reception

@{
    ViewBag.Title = "Удаление записи";
}

<h2>Удаление записи</h2>

<h3>Вы уверены, что хотите удалить данную запись?</h3>
<div>
    <h4>Запись</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Время записи")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RecTime)
        </dd>

        <dt>
            @Html.DisplayName("Напоминание по почте")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EmailNotification)
        </dd>

        <dt>
            @Html.DisplayName("Питомец")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Pet.Name)
        </dd>

        <dt>
            @Html.DisplayName("Услуга")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Service.PetService)
        </dd>

        <dt>
            @Html.DisplayName("Имя доктора")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Doctor.Name)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            @Html.ActionLink("Обратно к списку", "Index")
        </div>
    }
</div>
