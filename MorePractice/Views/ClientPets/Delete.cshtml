@model MorePractice.Pet

@{
    ViewBag.Title = "Удаление связи";
}

<h2>Удаление связи</h2>

<h3>Вы уверены, что хотите удалить эту связь?</h3>
<div>
    <h4>Клиент и питомец</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Питомец")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Pet.Name)
        </dd>

        <dt>
            @Html.DisplayName("Имя клиента")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Client.Name)
        </dd>

        <dt>
            @Html.DisplayName("Фамилия клиента")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Client.Surname)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            @Html.ActionLink("Назад к списку", "Index")
        </div>
    }
</div>
