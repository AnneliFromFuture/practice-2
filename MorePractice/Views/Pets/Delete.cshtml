@model MorePractice.Pet

@{
    ViewBag.Title = "Удаление питомца";
}

<h2>Удаление питомца</h2>

<h3>Вы уверены, что хотите удалить этого питомца?</h3>
<div>
    <h4>Питомец</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Кличка")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayName("Дата рождения")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BirthDate)
        </dd>

        <dt>
            @Html.DisplayName("Статус обслуживания")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsServiced)
        </dd>

        <dt>
            @Html.DisplayName("Род")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Species.Kind.PetKind)
        </dd>

        <dt>
            @Html.DisplayName("Порода")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Species.PetSpecies)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" />
        </div>
    }
</div>