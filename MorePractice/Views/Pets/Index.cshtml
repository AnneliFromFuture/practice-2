@model IEnumerable<MorePractice.Pet>

@{
    ViewBag.Title = "Список питомцев";
}

<h2>Список питомцев</h2>

<hr />
<h4>Поиск по кличке питомца</h4>
@using (Html.BeginForm("Index", "Pets", FormMethod.Get))
{
    <div class="form-inline form-group">
        @Html.TextBox("searching", "", htmlAttributes: new { @class = "form-control" })
        <input type="submit" value="Найти" class="btn btn-default" />
    </div>
}
<h2></h2>

<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayName("Кличка")
        </th>
        <th>
            @Html.DisplayName("Дата рождения")
        </th>
        <th>
            @Html.DisplayName("Статус обслуживания")
        </th>
        <th>
            @Html.DisplayName("Вид")
        </th>
        <th>
            @Html.DisplayName("Порода")
        </th>
        <th>
            @Html.DisplayName("Имя хозяина")
        </th>
        <th>
            @Html.DisplayName("Фамилия хозяина")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsServiced)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Species.Kind.PetKind)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Species.PetSpecies)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Owner.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Owner.Surname)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Детали", "Details", new { id = item.ID }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.ID })
            </td>
        </tr>
    }
</table>

<div class="form-group">
    <div class="col-md-offset-10">
        @Html.ActionLink("Экспорт в Excel", "Excel", "Pets", new { @class = "btn btn-info" })
    </div>
</div>